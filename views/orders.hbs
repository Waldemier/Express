<h1>{{title}}</h1>

{{#if orders.length}}
    {{#each orders}}
        <div class="row">
            <div class="col s6 offset-s3"> <!--Стилі всі відносяться до імпортованих компонентів materializecss-->
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">
                            Order ID: <small>{{_id}}</small>
                        </span>
                        <p class="date">Date {{ date }}</p>
                        <p><em>{{ user.name }}</em> ({{user.userId.email}}) </p>
                        <ol>
                            {{#each courses}}
                                <li>{{course.title}} (x<strong>{{amount}}</strong>)</li>
                            {{/each}}
                        </ol>
                        <hr>
                        <p>Price: <span class="price">{{price}}</span></p>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <p>There are no orders</p>
{{/if}}

<div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Login</a></li>
        <li class="tab col s6"><a href="#register">Registration</a></li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">

        <form method="POST" action="/auth/login">

            <h1>Login</h1>

            {{#if loginError}}
                <p class='alertError'>{{loginError}}</p>
            {{/if}}

            <div class="input-field">
                <input id="email" name="email" type="text" class ="validate" required>
                <label for="email">Email</label>
                <span class="helper-text" data-error="Add email"></span>
            </div>
                
            <div class="input-field">
                <input id="password" name="password" type="password" class ="validate" required>
                <label for="password">Password</label>
                <span class="helper-text" data-error="Add password"></span>
            </div>

            <input type="hidden" name="_csrf" value="{{csurf}}">
            
            <p><a href="/auth/reset">Forgot password?</a></p>

            <br><button class="btn btn-primary">Login</button>

        </form>
    
    </div>
    <div id="register" class="col s6 offset-s3">
        
        <form method="POST" action="/auth/registration">

            <h1>Create account</h1>

            {{#if registrationError}}
                <p class='alertError'>{{registrationError}}</p>
            {{/if}}

            <div class="input-field">
                <input id="email" name="email" type="text" class ="validate" required>
                <label for="email">Email</label>
                <span class="helper-text" data-error="Add email"></span>
            </div>

            <div class="input-field">
                <input id="name" name="name" type="text" class ="validate" required>
                <label for="name">Name</label>
                <span class="helper-text" data-error="Add name"></span>
            </div>
                
            <div class="input-field">
                <input id="rpassword" name="rpassword" type="password" class ="validate" required>
                <label for="rpassword">Password</label>
                <span class="helper-text" data-error="Add password"></span>
            </div>

            <div class="input-field">
                <input id="confirm" name="confirm" type="password" class ="validate" required>
                <label for="confirm">Repeat password</label>
                <span class="helper-text" data-error="Please repeat your password"></span>
            </div>

            <input type="hidden" name="_csrf" value="{{csurf}}">
            <br><button class="btn btn-primary">Registration</button>

    </form>
    </div>
</div>  